<%- include ("componentes/header", {titulo: "Perfiles Freelancers"}) %>
<!--contenido.-->
<section class="about-me section-padding" id="about-me">
    <div class="container">
        <div class="row">
            <!-- About me img -->
            <div class="col-xl-4 col-lg-4 col-md-5 col-sm-4 col-12">
                <div class="image-wrapper">
                    <img src="<%= detalles.imagen_perfil %>" alt="About me photo" />
                    <div class="subtitulo text-left pl-0">Mis habilidades principales</div>
                    <!-- Barra de skills -->
                    <div class="skills-bars">
                        <ul class="tags pl-0">
                            <% detalles.tags.forEach(function(tag){ %>
                            <li> <%=tag%></li>
                            <br>
                          <%}) %>
                        </ul>
                      
                    </div>
                </div>
            </div>
            <!-- About me contenido-->
            <div class="col-xl-7 col-lg-7 col-md-10">
                <div class="about-wrapper">
                    <h3 class="seccion-titulo mt-4"><%= detalles.nombre %> <span></span></h3>
                    <span class="seccion-subtitulo">
                        <%= detalles.especialidad %>
                    </span>
                    <div class="description">
                        <p><%= detalles.resumen %></p>
                    </div>
                </div>
                <!-- Boton de contratar -->
                <div class="about-buttons">
                    <a href="/propuesta" class="btn-main">Enviar Propuesta</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- cierre contenido -->
<style>
    /* Fonts */

    /* 0. General */
    #about-me{
        color: #9e9e9e;
    }
    #about-me ul.tags li{
        font-size: 120%;
    }
    
    /* Contenido */
    .section-padding {
        padding: 80px 0;
        /*Margen superior para la barra de navegacion*/
    }
    
    .seccion-titulo {
        font-weight: 700;
        color: #444;
        text-transform: uppercase;
    }
    
    .seccion-titulo span {
        background: #ff396c;
        margin-left: 10px;
        height: 5px;
        width: 30px;
        display: inline-block;
    }
    
    .seccion-subtitulo {
        color: #1e43e6;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
    }
    
    #about-me .image-wrapper {
        
        position: relative;
        margin-bottom: 30px !important;
    }
    
    #about-me .image-wrapper img {
        width: 100%;
        height: auto;
    }
    
    
    
    #about-me .description {
        margin: 40px 0;
        line-height: 25px;
    }
    
    #about-me .description p {
        letter-spacing: 1px;
        color: #707070;
    }
    
    #about-me .skill-title {
        display: flex;
        justify-content: space-between;
        border: 1px solid #5c5c5c;
        margin: 5px;
        background-color: rgb(241, 241, 241);
    }
    
    #about-me .skill-title p {
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 0;
        color: #5c5c5c;
    }
    
    #about-me .skill-progress span {
        background: #ff396c;
        display: block;
        height: 5px;
        width: 0;
        transition: width 1s;
    }

    #about-me .subtitulo {
        padding: 10px;
        font-size: 1.2em;
        font-weight: 600;
        color: #ff396c;
        text-align: center;
    }
    
    #about-me .skills-bars {
        margin-bottom: 40px;
        
    }
    
    a.btn-main {
        text-decoration: none;
        background: #1e43e6;
        padding: 15px 25px;
        font-weight: 500;
        color: #fff;
        letter-spacing: 1px;
        margin-top: 1rem;
    }
    
    /* Responsive */
    @media (max-width: 991.98px) and (min-width: 320px) {
        .seccion-titulo {
            margin-top: 8px;
        }
    }
    
    @media (max-width: 768px) {
        .home .header-meta {
            margin-left: 0 !important;
            padding: 10px !important;
        }

        .home .header-info h1 {
            font-size: 40px;
        }
    }

    @media (max-width: 576px) {
        .home .header-meta {
            margin-left: 0 !important;
            padding: 10px !important;
        }

        .home .header-info h1 {
            font-size: 30px;
            padding-left: 40px !important;
            line-height: 50px !important;
        }

        .home .header-info h1::before {
            width: 30px;
        }

        ul.header-meta {
            display: flex !important;
            flex-direction: column;
        }

        .home .header-meta li:first-of-type::after {
            content: "|";
            color: #a8eb12;
            /* font-size: 11px; */
            top: -1px;
            position: relative;
            padding: 0 15px 0 15px;
        }

        .home .header-meta li:nth-of-type(2)::before {
            content: "";
        }

        .home .header-meta li:first-of-type {
            text-align: left;
        }

        .home .header-meta li:nth-of-type(2) {
            text-align: center;
        }

        .home .header-meta li:last-of-type {
            text-align: right;
            padding-right: 15px;
        }
    }
</style>
<%- include ("componentes/footer") %>