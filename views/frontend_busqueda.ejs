    </div>
  </section>
  <div class="container">
    <h2 class="mb-4">
        FrontEnd developers disponibles para tu proyecto<br>   
      </h2>
  </div>
  <section id="zonaVip" class="container">
    <div class="row">
      <% freelancers.slice(-8).forEach(function(freelancer){ %>

      <%- include ("componentes/card_freelancer",{freelancer}) %>

      <%}) %>
    </div>
  </section>
